{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "checkJs": true,
    "jsx": "preserve",
    "incremental": true,
    "resolvePackageJsonExports": true,
    "resolvePackageJsonImports": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "plugins": [
    {
      "name": "@0no-co/graphqlsp",
      "schema": "@/graphql/_generated_/graphql.schema.graphql"
    }
  ],
  "types": ["node", "react", "react-dom", "./@types/*"],
  "files": [
    "next-env.d.ts",
    "global.d.ts",
    ".prettierrc",
    "eslint.config.ts",
    "graphql.config.ts"
  ],
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "eslint/**/*.mjs",

    "global.d.ts",
    ".prettierrc",
    "graphql.config.ts"
  ],
  "exclude": ["node_modules"]
}
