{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "checkJs": true,
    "jsx": "preserve",
    "incremental": true,
    "resolvePackageJsonExports": true,
    "resolvePackageJsonImports": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/graphql/*": ["./src/graphql/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/types/*": ["./src/types/*"],
      "@/i18n/*": ["./src/i18n/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/generated/*": ["./src/graphql/_generated_/*"]
    }
  },
  "plugins": [
    {
      "name": "@0no-co/graphqlsp",
      "schema": "./src/graphql/_generated_/graphql.schema.graphql"
    }
  ],
  "types": ["node", "react", "react-dom", "./@types/*"],
  "files": [
    "next-env.d.ts",
    "global.d.ts",
    ".prettierrc",
    "eslint.config.ts",
    "graphql.config.ts"
  ],
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.graphql",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "eslint/**/*.mjs",
    "global.d.ts",
    ".prettierrc",
    "graphql.config.ts",
    "src/styles/typography.config.js",
    "src/types/*.d.ts",
    "src/graphql/**/*.graphql",
    "src/graphql/_generated_/**/*.ts",
    "./codegen.ts"
  ],
  "exclude": ["node_modules"]
}
